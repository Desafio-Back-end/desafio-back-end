generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int     @default(autoincrement()) @id
  email String @unique
  nome String?
  tipoUsuario Int
}

model Instituicao {
  idInstituicao    Int     @default(autoincrement()) @id
  idUsuario Int
}

model Aluno {
   id    Int     @default(autoincrement()) @id
   idUsuario Int
}

model Professor {
   id    Int     @default(autoincrement()) @id
   idUsuario Int
}

model Disciplina {
   id    Int     @default(autoincrement()) @id
   nome String?
   instituicaoId Int
   preRequisto Int
}

model Turma {
   idTurma    Int     @default(autoincrement()) @id
   idProfessor Int
   idDisciplina Int
   horarioTurno String?
   anoSemestre Int
   numVagas Int
}

model Matricula {
   id    Int     @default(autoincrement()) @id
   idAluno Int
   idTurma Int
   status String?
}